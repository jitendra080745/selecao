{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "custom-blocks/features-block",
  "title": "Features Block",
  "category": "custom-blocks",
  "icon": "excerpt-view",
  "description": "A  Block with a heading, description",
  "supports": {
    "align": [
      "full",
      "wide"
    ]
  },
  "attributes": {
    "repeater": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "tabtitle": {
            "type": "string",
            "default": ""
          },
          "image": {
            "type": "string",
            "default": ""
          },
          "description": {
            "type": "string",
            "default": ""
          },
          "buttonText": {
            "type": "string",
            "default": "Click Here"
          },
          "buttonUrl": {
            "type": "string",
            "default": "#"
          },
          "repeater": {
            "type": "array",
            "default": [],
            "items": {
              "type": "object",
              "properties": {
                "subtitle": {
                  "type": "string",
                  "default": ""
                }
              }
            }
          }
        }
      }
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}