{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "custom-blocks/about-us-block",
  "title": "About Us Block",
  "category": "custom-blocks",
  "icon": "universal-access",
  "description": "A custom block with title, heading, description, link button, and a repeater field.",
  "supports": {
    "align": ["wide", "full"]
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "eyebrotext": {
      "type": "string",
      "default": ""
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "descriptionright": {
      "type": "string",
      "default": ""
    },
    "buttonText": {
      "type": "string",
      "default": "Learn More"
    },
    "buttonUrl": {
      "type": "string",
      "default": "#"
    },
    "repeater": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "default": "" }
        }
      }
    }
  },
  "textdomain": "custom-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.scss",
  "style": "file:./style.scss"
}
